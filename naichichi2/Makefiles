SUBDIRS=\
julius \
liblinear \
lua \
mecab \
#sqlite3 \
#tinyxml \
zlib \
#portaudio \
naichichi2

all:
	for d in $(SUBDIRS); do \
	  (cd $$d; $(MAKE)); \
	done

clean:
	for d in $(SUBDIRS); do \
	  if test -f $$d/Makefile; then \
	   (cd $$d; $(MAKE) distclean); \
	  fi; \
	done
	$(RM) config.log config.cache
	$(RM) config.status
